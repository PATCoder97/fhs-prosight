# ============================================================================
# FHS ProSight - Environment Variables Template
# Copy this file to .env and fill in your actual values
# ============================================================================

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/dbname
DB_HOST=your-db-host.com
DB_PORT=5432
DB_NAME=fhs_prosight
DB_USER=your-db-user
DB_PASSWORD=your-db-password

# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT_PATH=/app/firebase_credentials.json
FIREBASE_API_KEY=your-firebase-api-key-here

# External API Keys
PIDKEY_API_KEY=your-pidkey-api-key-here

# Application Settings
SECRET_KEY=your-secret-key-minimum-32-characters-long
ENVIRONMENT=production
CORS_ORIGINS=http://localhost:3000,http://localhost:80,https://yourdomain.com

# Optional: Logging
LOG_LEVEL=INFO

# Optional: Performance
WORKERS=4
MAX_CONNECTIONS=100
